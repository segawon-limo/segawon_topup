import React, { useState, useEffect } from 'react';
import { useParams, useNavigate } from 'react-router-dom';
import axios from 'axios';
import { toast } from 'react-toastify';
import { FaGamepad, FaUser, FaTag, FaEnvelope, FaPhone, FaCheckCircle, FaTimesCircle, FaSpinner } from 'react-icons/fa';

const API_URL = process.env.REACT_APP_API_URL;

function OrderPage() {
  const { gameSlug } = useParams();
  const navigate = useNavigate();

  const [products, setProducts] = useState([]);
  const [loading, setLoading] = useState(true);
  const [submitting, setSubmitting] = useState(false);

  const [formData, setFormData] = useState({
    productId: '',
    gameUserId: '',
    gameUserTag: '',
    customerEmail: '',
    customerPhone: '',
    customerName: '',
  });

  const [selectedProduct, setSelectedProduct] = useState(null);
  const [riotIdValidation, setRiotIdValidation] = useState({
    isValidating: false,
    isValid: false,
    playerInfo: null,
    error: null,
  });

  useEffect(() => {
    fetchProducts();
  }, [gameSlug]);

  const fetchProducts = async () => {
    try {
      const response = await axios.get(`${API_URL}/products/${gameSlug}`);
      setProducts(response.data.data);
    } catch (error) {
      console.error('Error fetching products:', error);
      toast.error('Gagal memuat data produk');
    } finally {
      setLoading(false);
    }
  };

  const handleInputChange = (e) => {
    const { name, value } = e.target;
    setFormData((prev) => ({
      ...prev,
      [name]: value,
    }));
    
    // Reset validation when user changes Riot ID or Tagline
    if (name === 'gameUserId' || name === 'gameUserTag') {
      setRiotIdValidation({
        isValidating: false,
        isValid: false,
        playerInfo: null,
        error: null,
      });
    }
  };

  const handleProductSelect = (product) => {
    setSelectedProduct(product);
    setFormData((prev) => ({
      ...prev,
      productId: product.id,
    }));
  };

  const validateRiotId = async () => {
    const { gameUserId, gameUserTag } = formData;

    // Validate inputs first
    if (!gameUserId || !gameUserId.trim()) {
      toast.error('Riot ID wajib diisi');
      return;
    }

    if (gameSlug === 'valorant' && (!gameUserTag || !gameUserTag.trim())) {
      toast.error('Tagline wajib diisi');
      return;
    }

    setRiotIdValidation({
      isValidating: true,
      isValid: false,
      playerInfo: null,
      error: null,
    });

    try {
      const response = await axios.post(`${API_URL}/validate-riot-id`, {
        gameUserId: gameUserId.trim(),
        gameUserTag: gameUserTag.trim(),
      });

      if (response.data.success) {
        setRiotIdValidation({
          isValidating: false,
          isValid: true,
          playerInfo: response.data.data,
          error: null,
        });
        toast.success(`✓ Riot ID ditemukan: ${response.data.data.displayName}`, {
          position: 'top-center',
          autoClose: 3000,
        });
      }
    } catch (error) {
      setRiotIdValidation({
        isValidating: false,
        isValid: false,
        playerInfo: null,
        error: error.response?.data?.message || 'Riot ID tidak ditemukan',
      });
      toast.error(error.response?.data?.message || 'Riot ID tidak ditemukan', {
        position: 'top-center',
        autoClose: 3000,
      });
    }
  };

  const handleSubmit = async (e) => {
    e.preventDefault();

    // Validasi
    if (!formData.productId) {
      toast.error('Pilih nominal topup terlebih dahulu');
      return;
    }

    if (!formData.gameUserId) {
      toast.error('Riot ID wajib diisi');
      return;
    }

    if (gameSlug === 'valorant' && !formData.gameUserTag) {
      toast.error('Tagline wajib diisi untuk Valorant');
      return;
    }

    setSubmitting(true);

    try {
      const response = await axios.post(`${API_URL}/orders`, formData);

      if (response.data.success) {
        const { order, payment } = response.data.data;
        
        // Redirect ke Midtrans
        if (payment.redirectUrl) {
          window.location.href = payment.redirectUrl;
        } else {
          toast.success('Order berhasil dibuat!');
          navigate(`/status/${order.order_number}`);
        }
      } else {
        toast.error(response.data.message || 'Gagal membuat order');
      }
    } catch (error) {
      console.error('Error creating order:', error);
      toast.error(error.response?.data?.message || 'Terjadi kesalahan saat membuat order');
    } finally {
      setSubmitting(false);
    }
  };

  if (loading) {
    return (
      <div className="container mx-auto px-4 py-16 text-center">
        <div className="inline-block animate-spin rounded-full h-12 w-12 border-4 border-primary-600 border-t-transparent"></div>
        <p className="mt-4 text-gray-600">Loading...</p>
      </div>
    );
  }

  if (products.length === 0) {
    return (
      <div className="container mx-auto px-4 py-16 text-center">
        <h2 className="text-2xl font-bold text-gray-800 mb-4">Game tidak ditemukan</h2>
        <button
          onClick={() => navigate('/')}
          className="bg-primary-600 text-white px-6 py-2 rounded-lg hover:bg-primary-700 transition"
        >
          Kembali ke Home
        </button>
      </div>
    );
  }

  const gameName = products[0]?.game_name || 'Game';

  return (
    <div className="min-h-screen bg-gray-50 py-12">
      <div className="container mx-auto px-4">
        <div className="max-w-4xl mx-auto">
          {/* Header */}
          <div className="bg-white rounded-lg shadow-md p-6 mb-6">
            <div className="flex items-center gap-4 mb-4">
              <div className="bg-primary-100 p-4 rounded-full">
                <FaGamepad className="text-3xl text-primary-600" />
              </div>
              <div>
                <h1 className="text-3xl font-bold text-gray-800">{gameName}</h1>
                <p className="text-gray-600">Topup cepat dan mudah</p>
              </div>
            </div>
          </div>

          <form onSubmit={handleSubmit}>
            <div className="grid md:grid-cols-2 gap-6">
              {/* Left Column - Product Selection */}
              <div>
                <div className="bg-white rounded-lg shadow-md p-6 mb-6">
                  <h2 className="text-xl font-bold mb-4 text-gray-800">
                    1. Pilih Nominal
                  </h2>
                  <div className="space-y-3">
                    {products.map((product) => (
                      <div
                        key={product.id}
                        onClick={() => handleProductSelect(product)}
                        className={`border-2 rounded-lg p-4 cursor-pointer transition ${
                          selectedProduct?.id === product.id
                            ? 'border-primary-600 bg-primary-50'
                            : 'border-gray-200 hover:border-primary-300'
                        }`}
                      >
                        <div className="flex justify-between items-center">
                          <div>
                            <h3 className="font-semibold text-gray-800">
                              {product.name}
                            </h3>
                            <p className="text-sm text-gray-600">
                              {product.description}
                            </p>
                          </div>
                          <div className="text-right">
                            <p className="font-bold text-primary-600">
                              Rp {parseInt(product.selling_price).toLocaleString('id-ID')}
                            </p>
                          </div>
                        </div>
                      </div>
                    ))}
                  </div>
                </div>
              </div>

              {/* Right Column - User Info Form */}
              <div>
                <div className="bg-white rounded-lg shadow-md p-6 mb-6">
                  <h2 className="text-xl font-bold mb-4 text-gray-800">
                    2. Data Akun Game
                  </h2>
                  <div className="space-y-4">
                    <div>
                      <label className="block text-sm font-medium text-gray-700 mb-2">
                        <FaUser className="inline mr-2" />
                        Riot ID *
                      </label>
                      <input
                        type="text"
                        name="gameUserId"
                        value={formData.gameUserId}
                        onChange={handleInputChange}
                        placeholder="Contoh: PlayerName"
                        className="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                        required
                      />
                      <p className="text-xs text-gray-500 mt-1">
                        Masukkan Riot ID kamu (tanpa #)
                      </p>
                    </div>

                    {gameSlug === 'valorant' && (
                      <div>
                        <label className="block text-sm font-medium text-gray-700 mb-2">
                          <FaTag className="inline mr-2" />
                          Tagline *
                        </label>
                        <input
                          type="text"
                          name="gameUserTag"
                          value={formData.gameUserTag}
                          onChange={handleInputChange}
                          placeholder="Contoh: RRR"
                          className="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                          required
                        />
                        <p className="text-xs text-gray-500 mt-1">
                          Masukkan tagline (3-5 karakter setelah #)
                        </p>
                      </div>
                    )}

                    {/* Riot ID Validation Button */}
                    <div>
                      <button
                        type="button"
                        onClick={validateRiotId}
                        disabled={riotIdValidation.isValidating || !formData.gameUserId || !formData.gameUserTag}
                        className={`w-full py-2.5 px-4 rounded-lg font-semibold transition flex items-center justify-center gap-2 ${
                          riotIdValidation.isValidating
                            ? 'bg-gray-400 cursor-not-allowed'
                            : riotIdValidation.isValid
                            ? 'bg-green-600 hover:bg-green-700 text-white'
                            : 'bg-blue-600 hover:bg-blue-700 text-white'
                        }`}
                      >
                        {riotIdValidation.isValidating ? (
                          <>
                            <FaSpinner className="animate-spin" />
                            Memeriksa Riot ID...
                          </>
                        ) : riotIdValidation.isValid ? (
                          <>
                            <FaCheckCircle />
                            Riot ID Terverifikasi
                          </>
                        ) : (
                          <>
                            Cek Riot ID
                          </>
                        )}
                      </button>
                    </div>

                    {/* Validation Status Display */}
                    {riotIdValidation.isValid && riotIdValidation.playerInfo && (
                      <div className="bg-green-50 border-2 border-green-200 rounded-lg p-4">
                        <div className="flex items-start gap-3">
                          <FaCheckCircle className="text-green-600 text-xl mt-1" />
                          <div className="flex-1">
                            <p className="font-semibold text-green-800 mb-1">
                              ✓ Akun Ditemukan
                            </p>
                            <div className="text-sm text-green-700 space-y-1">
                              <p>
                                <span className="font-medium">Riot ID:</span>{' '}
                                {riotIdValidation.playerInfo.displayName}
                              </p>
                              <p>
                                <span className="font-medium">Region:</span>{' '}
                                {riotIdValidation.playerInfo.region?.toUpperCase() || 'N/A'}
                              </p>
                              {riotIdValidation.playerInfo.accountLevel && (
                                <p>
                                  <span className="font-medium">Level:</span>{' '}
                                  {riotIdValidation.playerInfo.accountLevel}
                                </p>
                              )}
                            </div>
                          </div>
                        </div>
                      </div>
                    )}

                    {riotIdValidation.error && !riotIdValidation.isValid && (
                      <div className="bg-red-50 border-2 border-red-200 rounded-lg p-4">
                        <div className="flex items-start gap-3">
                          <FaTimesCircle className="text-red-600 text-xl mt-1" />
                          <div className="flex-1">
                            <p className="font-semibold text-red-800 mb-1">
                              ✗ Riot ID Tidak Ditemukan
                            </p>
                            <p className="text-sm text-red-700">
                              {riotIdValidation.error}
                            </p>
                            <p className="text-xs text-red-600 mt-2">
                              Pastikan Riot ID dan Tagline sudah benar.
                            </p>
                          </div>
                        </div>
                      </div>
                    )}
                  </div>
                </div>

                <div className="bg-white rounded-lg shadow-md p-6 mb-6">
                  <h2 className="text-xl font-bold mb-4 text-gray-800">
                    3. Data Kontak (Opsional)
                  </h2>
                  <div className="space-y-4">
                    <div>
                      <label className="block text-sm font-medium text-gray-700 mb-2">
                        <FaEnvelope className="inline mr-2" />
                        Email
                      </label>
                      <input
                        type="email"
                        name="customerEmail"
                        value={formData.customerEmail}
                        onChange={handleInputChange}
                        placeholder="email@example.com"
                        className="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                      />
                    </div>

                    <div>
                      <label className="block text-sm font-medium text-gray-700 mb-2">
                        <FaPhone className="inline mr-2" />
                        No. WhatsApp
                      </label>
                      <input
                        type="tel"
                        name="customerPhone"
                        value={formData.customerPhone}
                        onChange={handleInputChange}
                        placeholder="08123456789"
                        className="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                      />
                    </div>
                  </div>
                </div>

                {/* Order Summary */}
                {selectedProduct && (
                  <div className="bg-primary-50 border-2 border-primary-200 rounded-lg p-6 mb-6">
                    <h3 className="font-bold text-gray-800 mb-3">Ringkasan Pesanan</h3>
                    <div className="space-y-2 text-sm">
                      <div className="flex justify-between">
                        <span className="text-gray-600">Produk:</span>
                        <span className="font-semibold">{selectedProduct.name}</span>
                      </div>
                      <div className="flex justify-between">
                        <span className="text-gray-600">Harga:</span>
                        <span className="font-semibold">
                          Rp {parseInt(selectedProduct.selling_price).toLocaleString('id-ID')}
                        </span>
                      </div>
                      <hr className="my-2" />
                      <div className="flex justify-between text-lg">
                        <span className="font-bold">Total:</span>
                        <span className="font-bold text-primary-600">
                          Rp {parseInt(selectedProduct.selling_price).toLocaleString('id-ID')}
                        </span>
                      </div>
                    </div>
                  </div>
                )}

                <button
                  type="submit"
                  disabled={submitting || !selectedProduct}
                  className={`w-full py-3 rounded-lg font-bold text-white transition ${
                    submitting || !selectedProduct
                      ? 'bg-gray-400 cursor-not-allowed'
                      : 'bg-primary-600 hover:bg-primary-700'
                  }`}
                >
                  {submitting ? 'Memproses...' : 'Lanjut ke Pembayaran'}
                </button>

                <p className="text-xs text-gray-500 text-center mt-4">
                  Dengan melanjutkan, kamu menyetujui syarat dan ketentuan kami
                </p>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  );
}

export default OrderPage;
