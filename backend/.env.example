# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/topup_game

# JWT Secret (generate random string untuk production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# ApiGames API Configuration (Voucher Provider)
APIGAMES_MERCHANT_ID=your_apigames_merchant_id
APIGAMES_SECRET_KEY=your_apigames_secret_key
APIGAMES_ENDPOINT=https://v1.apigames.id

# Xendit Payment Gateway Configuration
XENDIT_SECRET_KEY=your_xendit_secret_key
XENDIT_PUBLIC_KEY=your_xendit_public_key
XENDIT_IS_PRODUCTION=false
XENDIT_CALLBACK_TOKEN=your_callback_verification_token

# Henrik Dev API for Riot ID Validation
HENRIKDEV_API_KEY=your_henrikdev_api_key

# LEGACY - VIP Reseller & Digiflazz & Midtrans (keep for reference, not used)
# VIPRESELLER_API_ID=your_vipreseller_api_id
# VIPRESELLER_API_KEY=your_vipreseller_api_key
# DIGIFLAZZ_USERNAME=your_digiflazz_username
# DIGIFLAZZ_API_KEY=your_digiflazz_api_key
# MIDTRANS_SERVER_KEY=your_midtrans_server_key
# MIDTRANS_CLIENT_KEY=your_midtrans_client_key

# Callback URLs (ganti dengan domain production kamu)
CALLBACK_URL=http://localhost:5000/api/payment/callback
FRONTEND_URL=http://localhost:3000

# WhatsApp Notification (Fonnte)
FONNTE_TOKEN=your_fonnte_token
FONNTE_ENABLED=false

# Email Configuration (optional - untuk notifikasi email)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@topupgame.id

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Admin Configuration
ADMIN_EMAIL=admin@topup.com
ADMIN_PASSWORD=admin123
